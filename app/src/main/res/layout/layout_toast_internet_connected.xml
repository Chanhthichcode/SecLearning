<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutToast"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_size_normal"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_toast_internet_connected">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgInternetConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_normal"
        android:src="@drawable/ic_internet_connected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/green_12C138" />

    <com.android.seclearning.view.MyTextView
        android:id="@+id/txtAnnouncement"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="You are now connected"
        android:textColor="@color/green_12C138"
        android:textSize="@dimen/text_size_small"
        app:customFontFamily="@font/my_font_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgInternetConnected"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>