<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.android.seclearning.view.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:customFontFamily="@font/my_font_semibold"
        android:text="Lộ trình Web Pentester"
        android:textColor="@color/color_primary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_register"
        app:layout_constraintEnd_toStartOf="@id/btn_register"
        app:layout_constraintBottom_toBottomOf="@id/btn_register"/>

    <com.android.seclearning.view.MyTextView
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_gradient"
        android:gravity="center"
        android:text="Đăng ký"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:customFontFamily="@font/my_font_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <include
            android:id="@+id/layout_web"
            layout="@layout/view_web_pentest_roadmap"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout_soc"
            layout="@layout/view_soc_roadmap"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_difr"
            layout="@layout/view_difr_roadmap"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_malware"
            layout="@layout/view_malware_roadmap"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_network"
            layout="@layout/view_network_roadmap"
            android:visibility="gone" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>