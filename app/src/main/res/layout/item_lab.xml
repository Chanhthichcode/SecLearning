<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_lab"
    android:padding="@dimen/space_normal"
    android:layout_marginBottom="@dimen/space_semi_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_lab" />

        <com.android.seclearning.view.MyTextView
            android:id="@+id/namePackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_semi_small"
            android:layout_marginEnd="@dimen/space_medium"
            android:ellipsize="marquee"
            android:gravity="start|center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Insider - Linux Disk Forensics"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:customFontFamily="@font/my_font_semibold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/ic_more"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/imgLab"
            app:layout_constraintTop_toTopOf="@id/imgLab" />

        <com.android.seclearning.view.MyTextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 0"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:customFontFamily="@font/my_font_regular"
            app:layout_constraintStart_toStartOf="@id/namePackage"
            app:layout_constraintTop_toBottomOf="@id/namePackage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_more"
            android:layout_width="@dimen/button_size_normal"
            android:layout_height="@dimen/button_size_normal"
            android:padding="@dimen/space_semi_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_down" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTop">

        <com.android.seclearning.view.MyTextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục: Network Security"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:customFontFamily="@font/my_font_regular"
            app:layout_constraintStart_toStartOf="@id/namePackage"
            app:layout_constraintTop_toBottomOf="@id/namePackage" />

        <com.android.seclearning.view.MyTextView
            android:id="@+id/tv_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Các kỹ năng: "
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:customFontFamily="@font/my_font_regular"
            app:layout_constraintStart_toStartOf="@id/namePackage"
            app:layout_constraintTop_toBottomOf="@id/namePackage" />


        <com.android.seclearning.view.MyTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mô tả chi tiết"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:customFontFamily="@font/my_font_regular"
            app:layout_constraintStart_toStartOf="@id/namePackage"
            app:layout_constraintTop_toBottomOf="@id/namePackage" />

        <com.android.seclearning.view.MyTextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Đường dẫn:"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:customFontFamily="@font/my_font_regular"
            app:layout_constraintStart_toStartOf="@id/namePackage"
            app:layout_constraintTop_toBottomOf="@id/namePackage" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>