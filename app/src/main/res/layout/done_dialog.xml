<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="40dp"
    android:background="@drawable/bg_border_dialog">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animDone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/check_done"
        app:lottie_ignoreDisabledSystemAnimations="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.android.seclearning.view.MyTextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng ký thành công"
        android:textColor="#59AC6E"
        android:layout_marginTop="@dimen/text_size_medium"
        android:textSize="18dp"
        app:customFontFamily="@font/my_font_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animDone" />

</androidx.constraintlayout.widget.ConstraintLayout>