<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/space_normal"
        android:background="@drawable/bg_dialog"
        android:padding="@dimen/space_normal">

        <com.android.seclearning.view.MyTextView
            android:id="@+id/txtTitle"
            style="@style/TextTitleDialogStyle"
            android:text="Bạn phù hợp với Web Pentest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.android.seclearning.view.MyTextView
            android:id="@+id/txtDescription"
            style="@style/TextDescriptionStyle"
            android:layout_marginTop="@dimen/space_normal"
            android:gravity="center"
            tools:text=" "
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

        <com.android.seclearning.view.MyTextView
            android:id="@+id/btnNavigation"
            style="@style/ButtonNormalStyle"
            android:layout_marginTop="@dimen/space_large"
            android:gravity="center"
            android:text="Xem lộ trình của bạn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>